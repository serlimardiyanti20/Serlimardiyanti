<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/keju"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:src="@mipmap/ic_cheese_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534">

    </ImageView>

    <Button
        android:id="@+id/btnroti"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bb633f"
        android:text="Roti"
        app:layout_constraintEnd_toStartOf="@+id/btnsusu"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roti" />

    <Button
        android:id="@+id/btnsusu"
        android:layout_width="77dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="#bb633f"
        android:text="Susu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/susu" />

    <ImageView
        android:id="@+id/susu"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        android:src="@mipmap/ic_susu_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/roti"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <ImageView
        android:id="@+id/roti"
        android:layout_width="123dp"
        android:layout_height="123dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:src="@mipmap/ic_roti_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <Button
        android:id="@+id/btnkeju"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#bb633f"
        android:text="Keju"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keju" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Masukan jumlah produk..."
        android:textColorHint="#BAB6B6"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />

    <Button
        android:id="@+id/btnenter"
        android:layout_width="90dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#bb633f"
        android:text="ENTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>